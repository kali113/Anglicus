{
  "name": "anglicus",
  "version": "1.0.0",
  "description": "AI English tutor for Spanish speakers - Monorepo",
  "private": true,
  "workspaces": [
    "web",
    "api"
  ],
  "scripts": {
    "dev:web": "cd web && npm run dev",
    "dev:api": "cd api && npm run dev",
    "build:web": "cd web && npm run build",
    "build:api": "cd api && npm run build",
    "build": "npm run build:web",
    "test:api": "cd api && npm run test",
    "deploy:api": "cd api && npm run deploy",
    "install:all": "npm install && cd web && npm install && cd ../api && npm install"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
